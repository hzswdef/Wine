{
	"plugins": ["prettier-plugin-tailwindcss"],
	"semi": true,
	"singleQuote": false,
	"jsxSingleQuote": false,
	"arrowParens": "avoid",
	"trailingComma": "none",
	"endOfLine": "lf",
	"bracketSpacing": true,
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 80,
	"quoteProps": "as-needed",
	"overrides": [
		{
			"files": "README.md",
			"options": {
				"useTabs": false
			}
		}
	]
}
